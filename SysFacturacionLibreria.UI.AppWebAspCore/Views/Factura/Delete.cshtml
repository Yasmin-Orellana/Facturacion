        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NIT)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NIT)
