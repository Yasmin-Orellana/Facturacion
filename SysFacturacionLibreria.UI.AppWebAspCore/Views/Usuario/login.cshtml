@model SysFacturacionLibreria.EntidadesDeNegocio.Usuario

@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Inicio de sesión</title>
    <!-- Agrega los enlaces de Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
  
   

<style>
        body {
            background: #ffe259;
            background: linear-gradient(to right,#fbbdbc,#a2ebeb,#f2e8c9)
        }

    .login-form {
        width: 100%;
        max-width: 420px;
        margin: 0 auto;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        border-radius: 10px;
        background-color: #fff;
    }

    .login-form h2 {
        text-align: center;
        font-weight: bold;
        color: #555;
        margin-bottom: 30px;
    }

    .login-form .form-label {
        font-weight: bold;
        color: #555;
    }

    .login-form .form-control {
        font-size: 16px;
        height: auto;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #f8f9fa;
    }

    .login-form .form-control:focus {
        box-shadow: none;
    }

    .login-form .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 140px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
    }

    .login-form .btn-primary:hover {
        background-color: #f2ce;
        border-color: #f2ce;
    }

    .login-form .invalid-feedback {
        display: block;
        margin-top: .25rem;
        font-size: 80%;
        color: #5f4043;
    }

    .login-form .form-group:last-child {
        margin-bottom: 0;
    }

    .login-form .form-check-input {
        margin-right: 10px;
    }

    .logo {
        display: block;
        margin: 0 auto;
        width: 200px; 
     }
</style>
</head>
<body>
    <br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Login" method="post" class="login-form needs-validation" novalidate>
                <h2>Inicio de sesión</h2>
                    <img src="~/img/Logo.png" alt="Logo de inicio de sesión" class="logo">
                <br />

                    <div class="form-group">
                        <label asp-for="Login" class="form-label">Nombre de Usuario </label>
                        <input asp-for="Login" class="form-control " placeholder=" Ingrese Nombre del usuario" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <input asp-for="Password" class="form-control" placeholder="Ingresar Contraseña" />
                            </div>
                  <br />
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>
    
    
    
    
